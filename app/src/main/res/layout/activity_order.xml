<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OrderActivity">


    <RelativeLayout
            android:id="@+id/orderRelLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Product Sans"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:padding="20dp">

            <TextView
                    android:id="@+id/txtPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Pedido"
                    android:textSize="40sp"
                    android:textColor="@android:color/white"/>

            <ListView
                    android:id="@+id/orderListView"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">
            </ListView>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"

            >
                <Button
                        android:id="@+id/btnCleanOrder"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorAccent"
                        android:text="Limpiar Pedido"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                />
                <Button
                        android:id="@+id/btnMakeOrder"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorAccent"
                        android:text="Hacer Pedido"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:layout_marginLeft="15dp"/>


            </LinearLayout>
            <Button
                    android:id="@+id/btnBackToMainFromOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorAccent"
                    android:text="Regresar al Inicio"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="14dp"
                    android:padding="10dp"/>

        </LinearLayout>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>